<html>
    <head>
        <title>FLAMES</title>
        <link rel="stylesheet" href="css/foundation.css" type="text/css" />
        <link rel="stylesheet" href="css/application.css" type="text/css" />
    </head>
<body>
<div class="row">
  <div class="medium-8 large-6 medium-centered columns">
    <h1 class="header">F L A M E S</h1>
  </div>
</div>
<div class="row">
  <div class="large-4 medium-8 medium-centered columns">
    <br/>
    <br/>
    <form action="/" >
      <div class="input">
        <input type="text" name="person1"  value= "<%= params[:person1] %>" placeholder="First Person">
        <br/>
      </div>
      <div class="input">
        <input type="text" name="person2" value="<%= params['person2'] %>" placeholder="Second Person">
        <br/>
      </div>
          <input class="submit" type="submit">
    </form>
  </div>
</div>
<div class="row">
  <div class="large-3 medium-3  medium-centered columns">
    <div class="flames_image">
      <%= get_image(@result) %>
    </div>
</div>
</div>
</body>
</html>
